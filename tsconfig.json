{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  "lib": ["DOM", "ES2020"]
  },
  "include": ["src", "src/**/*.svelte"],
  "types": ["svelte"]
}
